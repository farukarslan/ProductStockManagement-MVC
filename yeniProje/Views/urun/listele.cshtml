@model List<yeniProje.Models.urun>
@{
    ViewBag.Title = "listele";
}

<h2>Ürün Stok Listesi</h2>

<div class="container">
    <table class="table table-striped table-bordered" style="background-color:white;">
        <tr>
            <th>Ürün İsmi</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Adeti</th>
            <th>Ürün Açıklaması</th>
            <th>Kontrol Kısmı</th>
            <th>Kontrol Kısmı</th>
            <th>Stok Adedi Güncelleme</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>@Html.DisplayFor(i => item.urunismi)</td>

                <td>@Html.DisplayFor(i => item.fiyati)</td>

                <td>@Html.DisplayFor(i => item.adet)</td>

                <td>@Html.DisplayFor(i => item.aciklama)</td>

                <td>@Html.ActionLink("Adeti Arttır", "azalt", new { id = item.id }, new { @class = "btn btn-success" })</td>

                <td>@Html.ActionLink("Adeti Azalt", "arttir", new { id = item.id }, new { @class = "btn btn-danger" })</td>

                <td>
                    @using (Html.BeginForm("adetekle", "urun", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@item.id" />
                        <input type="text" name="degis" value="@item.adet" />
                        <input type="submit" value="degistir" />
                    }
                </td>

            </tr>
        }
    </table>
</div>